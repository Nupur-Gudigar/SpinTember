{
  "name": "first-draft-spintember",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron.mjs",
  "scripts": {
    "dev": "vite --port 5173",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .\"",
    "electron-build": "npm run build && electron-builder",
    "electron-pack": "npm run build && electron-builder --publish=never",
    "dist": "npm run build && electron-builder --publish=always"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.9.0",
    "html2canvas": "^1.4.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.9.1",
    "react-webcam": "^7.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "vite": "^7.1.6",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.spintember.app",
    "productName": "SpinTember",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron.mjs",
      "package.json",
      "src/assets/dekstop-icon.jpeg"
    ],
    "icon": "src/assets/dekstop-icon.jpeg",
    "mac": {
      "category": "public.app-category.entertainment",
      "icon": "src/assets/dekstop-icon.jpeg",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "src/assets/dekstop-icon.jpeg",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "src/assets/dekstop-icon.jpeg",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
